%body
  %header.bg-dark.py-5
    .container.px-4.px-lg-5.my-5
      .text-center.text-white
        %h1.display-4.fw-bolder Orders
        %p.lead.fw-normal.text-white-50.mb-0 Finding inventory in the backroom is not always a joy.
%table.table.table-light.table-striped
  %thead
    %tr
      %th{:scope => "col"} Order id
      %th{:scope => "col"} Name
      %th{:scope => "col"} Email
      %th{:scope => "col"} Order Description
      %th{:scope => "col"} Total Price
      %th{:scope => "col"} Payment Method
  %tbody
    - @orders.each do |order|
      %tr
        %td
          = order.id
        %td
          = order.name
        %td
          = order.email
        %td
          %table.table.table-light.table-dark
            %thead
              %tr
                %th{:scope => "col"}
                %th{:scope => "col"} Item Name
                %th{:scope => "col"} Item quantity
                %th{:scope => "col"} Price/Item
            %tbody
              - order.line_items.each do |item|
                %tr
                  %td
                    = image_tag(item.product.image_url, class: 'icon_image', width: 100, height:100)
                  %td
                    = item.product.title
                  %td
                    = item.quantity
                  %td
                    = item.product.price
        %td
          = number_to_currency(order.total_price)
        %td
          = order.pay_type
        %td
          = link_to 'Destroy', order, method: :delete, data: { confirm: 'Have you Dispatched the Order' }
