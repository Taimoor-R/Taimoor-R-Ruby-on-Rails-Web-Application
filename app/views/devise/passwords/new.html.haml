%body
  %header.bg-dark.py-5
    .container.px-4.px-lg-5.my-5
      .text-center.text-white
        %h1.display-4.fw-bolder=t('.title')
        %p.lead.fw-normal.text-white-50.mb-0=t('.subtitle')


        .row.justify-content-center
          .col-lg-4.col-md-6.ml-auto.mr-auto
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = render partial: 'devise/shared/error_messages', resource: resource
              %br/
              %p.text-center=t('.subtitle2')
              .form-group
                = f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control'
              .form-group
                = f.submit t('.passsubt'), class: 'btn btn-primary btn-block btn-lg'
            .text-center
              = render "devise/shared/links"
