%body
  %header.bg-dark.py-5
    .container.px-4.px-lg-5.my-5
      .text-center.text-white
        %h1.display-4.fw-bolder Reset your password
        %p.lead.fw-normal.text-white-50.mb-0 Dont Worry, We Got You !


        .row.justify-content-center
          .col-lg-4.col-md-6.ml-auto.mr-auto
            = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
              = render partial: 'devise/shared/error_messages', resource: resource
              %br/
              %p.text-center Enter your email address below and we will send you a link to reset your password.
              .form-group
                = f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control'
              .form-group
                = f.submit "Send password reset email", class: 'btn btn-primary btn-block btn-lg'
            .text-center
              = render "devise/shared/links"
