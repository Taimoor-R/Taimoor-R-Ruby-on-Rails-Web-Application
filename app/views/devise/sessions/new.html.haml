%body
  %header.bg-dark.py-5
    .container.px-4.px-lg-5.my-5
      .text-center.text-white
        %h1.display-4.fw-bolder=t('.title')
        %p.lead.fw-normal.text-white-50.mb-0=t('.subtitle')
%br
%br


.row.justify-content-center
  .col-lg-4.col-md-6.ml-auto.mr-auto
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-group
        = f.email_field :email, autofocus: true, placeholder: 'Email Address', class: 'form-control'
      .form-group
        = f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control'
      - if devise_mapping.rememberable?
        .form-check
          %label.form-check-label
            = f.check_box :remember_me, class: "form-check-input"
            =t('.rebme')
      .form-group
        = f.submit t('.logint'), class: "btn btn-primary btn-block btn-lg"
    .text-center
      = render "devise/shared/links"
